@using EditModMenuDTO = ModMenu.Http.DTO.EditModMenuDTO
@model EditModMenuDTO

@{
    ViewBag.Title = "Criar um mod menu";
    Layout = "_Layout";
}

<div class="card mt-5">
    <div class="card-body p-3">
        <h2 class="mb-3">
            Criar um mod
        </h2>
        <form asp-action="CreateModMenu" method="post">
            <input type="text" class="form-control mb-2" name="title" id="title" placeholder="Titulo">
            <input type="text" class="form-control mb-2" name="description" id="description" placeholder="Descrição">
            <input type="text" class="form-control mb-2" name="price" id="price" placeholder="Preço">
            <input type="text" class="form-control mb-2" name="filename" id="filename" placeholder="Nome do arquivo">
            <button type="submit" class="btn btn-success">
                Criar
            </button>
        </form>
    </div>
</div>